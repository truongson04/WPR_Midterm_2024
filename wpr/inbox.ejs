<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>

        .header{
           display:flex;
          
           justify-content: space-between;
           border-bottom: 10px solid rgb(49, 177, 237);}
           .header h1{
               font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
               color: rgb(74, 24, 212);

               
           }

      
  
   .header img{
          
          height:80px;
          margin-right:5px;
   }
       .sidebar{
           flex:0.3;
           max-width:300px;
           padding-right:20px;

       }
       .sidebar_compose{
           margin-top:15px;
           margin-left:10px;
           margin-bottom:15px;
           text-transform: capitalize;
           color:gray;
           padding:15px;
           border-radius: 30px;
           background-color: aliceblue;
           display:flex;
           align-items: center;
           cursor: pointer;
           outline:none;
           border:none;
           box-shadow: 0px, 2px, 5px-2px rgba(red, 0, 0, 0.75)

       }
       .sidebarOption{
           display:flex;
           align-items: center;
           height:40px;
           padding: 0 10px;
           border-top-right-radius: 20px;
           border-bottom-right-radius:20px;
           cursor:pointer;
           color:gray;
           

       }
       .sidebar a{
           text-decoration: none;
           color:gray;
       }
       .sidebar h3{
           flex:1;
           margin-left: 10px;
           font-size: 14px;
           font-weight: 400;

       }
       .sidebarOption:hover,
       .sidebarOption:hover h3 {
          background-color: aliceblue;
          color:cyan;

       }
     
       body{
           height:100vh;
           overflow-y: hidden;

       }
       .emailList_sections{
           flex:1;
           overflow: scroll;

       }
       .main_body{
           display:flex;
       }
       .section{
           align-items: center;
           display:flex;
           border-bottom-width: 2px;
           padding:15px;
           min-width:200px;
           cursor: pointer;
           color:gray;
           border-width: 0;


       }
       .emailList_sections{
           position:sticky;
           top:0;
           display:flex;
           background-color: white;
           border-bottom: 1px, solid, whitesmoke;
           z-index: 999;
       }
       .section:hover{
           background-color: whitesmoke;
           border-width:3px ;

       }
       .section h4{
           font-size: 14px;
           margin-left: 15px;

       }
       .emailRow{
           display:flex;
           align-items: center;
           height:50px;
           border-bottom:  1px, solid, whitesmoke;
           cursor: pointer;
            z-index:999;
       }
       .emailRow:hover {
           border-top: 1px solid whitesmoke;
           box-shadow: 0 4px 4px -2px rgb(4, 51, 51);


       }
       .emailRow_messege{
           display: flex;
           flex:0.8;
           align-items: center;
           font-size: 13px;

       }
       .emailRow_messege h4{
           width:800px;
           white-space: nowrap;
           overflow: hidden;
           text-overflow: ellipsis;
           padding-left: 5px;
           padding-right: 5px;
       }
       .emailRow_messege a{
           text-decoration: none;
           color:black;


       }
       .emailRow_title{
           font-size: 13px;
           flex:0.3;
           width:200px;

       }
       .emailRow_time{
           padding-right: 15px;
           font-size:10px;
           font-weight: bold;
       }
       .emailRow_description{
           font-weight: 400;
           color:gray;
       }
       .pagination{
           text-align: center;
           
       }
       .pagination a{
           color:black;
           text-decoration: none;
           padding: 8px 15px;
           display:inline-block;

       }
       .pagination a.active{
           background-color: aqua;
           font-weight: bold;
           border-radius: 5px;

       }
       .pagination a:hover:not(.active){
           background-color: gray;
           border-radius: 5px;
       }

      
      
   
       


   </style>


    <title>Document</title>
</head>
<body>
    <div class="header">
        <h1>WPR</h1>
        
        <img src="" >
    </div>

    
    <div class="main_body">
        <div class="sidebar">
            <button class="sidebar_compose">
               <a href="Compose" >Compose++</a>
            </button>
            <div class="sidebarOption">
                <a href="inbox"><h3 style="color:aqua">Inbox</h3></a>
            </div>
             <div class="sidebarOption">
                <a href="outbox"><h3>Outbox</h3></a>
            </div>
             <div class="sidebarOption">
                <form action="server" method="POST">
                    <input type="hidden" name="action" value="logout">
                <button type="submit" class="sign_out_btn">Sign out</button>
                </form>
            </div>

        </div>
        

    
    <div>
<div class="emailList_sections">
    <div class="section">
        <h4>Sender</h4>

    </div>
     <div class="section">
        <h4>Content</h4>

    </div>
    <div class="section">
        

    </div>
</div>


<!--Email list-->
    <div class="emailList_list">
        <% messages.forEach((msg) => { %>
        <div class="emailRow">
            <div class="emailRow_options">
                <input type="checkbox">

            </div>
            <h3 class="emailRow_title"><%= msg.sender_name %></h3>
            <div class="emailRow_messege">
                <a href='#'><h4><strong> <%= msg.subject %></a></strong><span class="emailRow_description">---click here for more details</span></h4>
            </div>
            <p class="emailRow_time"><%= msg.created_at %><</p>
        </div>
       
    
    <% }) %>

    <div class="pagination">
        <a href="homepage" class="active">1</a>
         <a href="homepage2">2</a>
           <a href="">></a>
    </div>

    

</body>
</html>




